# yaml-language-server: $schema=https://aka.ms/configuration-dsc-schema/0.2
properties:
  configurationVersion: 0.2.0
  resources:
    # --- Productivity Tools ---
    - resource: Microsoft.WinGet.DSC/WinGetPackage
      id: Chrome
      directives:
        description: Install Google Chrome
      settings:
        id: Google.Chrome
        source: winget
        useLatest: true

    - resource: Microsoft.WinGet.DSC/WinGetPackage
      id: BraveBrowser
      directives:
        description: Install Brave Browser
      settings:
        id: Brave.Brave
        source: winget
        useLatest: true

    - resource: Microsoft.WinGet.DSC/WinGetPackage
      id: Obsidian
      directives:
        description: Install Obsidian
      settings:
        id: Obsidian.Obsidian
        source: winget
        useLatest: true

    - resource: Microsoft.WinGet.DSC/WinGetPackage
      id: WinRAR
      directives:
        description: Install WinRAR
      settings:
        id: RARLab.WinRAR
        source: winget
        useLatest: true

    - resource: Microsoft.WinGet.DSC/WinGetPackage
      id: qBittorrent
      directives:
        description: Install qBittorrent
      settings:
        id: qBittorrent.qBittorrent
        source: winget
        useLatest: true
